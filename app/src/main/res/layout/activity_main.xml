<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clipChildren="false">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/radiogroup"
            android:layout_marginBottom="10dp"
            />


        <LinearLayout
            android:id="@+id/radiogroup"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/dd1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/iv_jingtong" />
                <TextView
                    android:id="@+id/tv1"
                    android:layout_marginTop="1dp"
                    android:textSize="11sp"
                    android:layout_centerInParent="true"
                    android:text="警通"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dd1"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_work"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/dd2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"

                    android:background="@drawable/iv_jingtong" />
                <TextView
                    android:id="@+id/tv2"
                    android:layout_marginTop="1dp"
                    android:textSize="11sp"
                    android:layout_centerInParent="true"
                    android:text="工作"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dd2"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_task"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/dd3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"

                    android:background="@drawable/iv_jingtong" />
                <TextView
                    android:id="@+id/tv3"
                    android:layout_marginTop="1dp"
                    android:textSize="11sp"
                    android:layout_centerInParent="true"
                    android:text="任务"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dd3"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/dd4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"

                    android:background="@drawable/iv_jingtong" />
                <TextView
                    android:id="@+id/tv4"
                    android:layout_marginTop="1dp"
                    android:textSize="11sp"
                    android:layout_centerInParent="true"
                    android:text="消息"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dd4"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_ldys"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/dd5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/iv_jingtong" />
                <TextView
                    android:id="@+id/tv5"
                    android:layout_marginTop="1dp"
                    android:textSize="11sp"
                    android:layout_centerInParent="true"
                    android:text="我的"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dd5"/>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
